<head>
<style>
table.buttons tr td {
  text-align:center;
}
.button {
height:50px; 
width:100%;
font-weight:bold;
}
.red {
background: red;
}
.green {
background: green;
}
.yellow {
background: yellow;
}
ul {
  columns: 2;
  -webkit-columns: 2;
  -moz-columns: 2;
}
</style>
</head>
<table width="100%" class="buttons">
  <tr>
    <td>
      <% if counter > 0 %>
          <form action="/<%= counter - 1 %>">
            <button class="button">&laquo;</button>
          </form>
      <% end %>
    </td>
    <td>
      <form action="/v/<%= counter %>" method="post">
        <button class="button green">Valid</button>
      </form>
    </td>

    <td>
      <form action="/set/<%= counter %>" method="post">
        <input type="text" name="cyc_name" style="width: 70%; height: 50px;" onkeyup="document.getElementById('set').disabled=false" onclick="document.getElementById('set').disabled=false">
        <input type="submit" id="set" disabled="true" value="Set" style="width: 20%; height: 50px;">
      </form>
    </td>
    <td>
      <% if counter < 599 %>
          <form action="/<%= counter + 1 %>">
            <button class="button">&raquo;</button>
          </form>
      <% end %>
    </td>
  </tr>
</table>
<hr>

<table width="100%" height="80%">
  <tr>
    <td style="text-align:center" width="50%"><h1><%= pattern %> - <%= support %></h1></td>
    <td style="text-align:center" width="50%"><h1><%= cyc %></h1></td>
  </tr>
  <tr height="90%">
    <td>
      <ul>
        <% categories.sort.each do |category| %>
            <li><a href="http://en.wikipedia.org/wiki/Category:<%= category.gsub(' ', '_') %>"><%= category %></a></li>
        <% end %>
      </ul>
    </td>
    <td>
      <iframe src="<%= cyc_url %>" align="right" height="100%" width="100%"></iframe>

    </td>
  </tr>
</table>



